<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="CustomButton1" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">#6CCC4A</item>
    </style>

    <style name="CustomButton2" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">@android:color/holo_orange_light</item>
    </style>

    <style name="CustomButton3" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">@android:color/holo_red_light</item>

    </style>

    <style name="CustomButton4" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="UnderLine">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/under_line</item>
    </style>

    <style name="UnderLineBlack">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/under_line_black</item>
    </style>



</resources>