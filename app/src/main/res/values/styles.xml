<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="CustomSelfNavButton1" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">#6CCC4A</item>
    </style>

    <style name="CustomCareNavButton" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">@android:color/holo_orange_light</item>
    </style>

    <style name="CustomCallEmergency" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">@android:color/holo_red_light</item>

    </style>

    <style name="CustomSendLocation" parent = "@android:style/Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:drawable">@drawable/button_custom</item>
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="UnderLine">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/under_line</item>
    </style>

    <style name="UnderLineBlack">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/under_line_black</item>
    </style>

    <style name="UnderLineSetting">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/under_line_setting</item>
    </style>

    <style name="settingBlindButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@null</item>

    </style>

</resources>