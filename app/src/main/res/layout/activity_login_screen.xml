<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_page"
    android:orientation="vertical"
    tools:context=".Login.LoginScreen"
    >

    <ScrollView
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Vector 1 -->
    <View
        android:id="@+id/vector_1"
        android:layout_width="match_parent"
        android:layout_height="128.21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/vector_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ic_launcher"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="130dp"
        android:src="@mipmap/icon_app_login_foreground" />

    <!-- Ellipse 1 -->
    <View
        android:id="@+id/ellipse_1"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2.5dp"
        android:layout_marginTop="111.5dp"
        android:background="@drawable/ellipse_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vector_1" />

    <!-- Ellipse 2 -->
    <View
        android:id="@+id/ellipse_2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120.50dp"
        android:background="@drawable/ellipse_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vector_1"
        />

    <!-- Ellipse 3 -->
    <View
        android:id="@+id/ellipse_3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:background="@drawable/ellipse_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vector_1"
        />

    <!-- Ellipse 4 -->
    <View
        android:id="@+id/ellipse_4"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="121.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:background="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vector_1"
        />

    <!-- Ellipse 5 -->
    <View
        android:id="@+id/ellipse_5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/ellipse_5"
        app:layout_constraintEnd_toEndOf="@+id/ellipse_7"
        app:layout_constraintTop_toTopOf="@+id/vector_1" />

    <!-- Ellipse 6 -->
    <View
        android:id="@+id/ellipse_6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/ellipse_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vector_1" />

    <!-- Ellipse 7 -->
    <View
        android:id="@+id/ellipse_7"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/ellipse_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vector_1" />

    <!-- EN | TH -->
    <TextView
        android:id="@+id/en_th"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:text="@string/language_intro"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/login_heading"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/roboto"
        android:text="@string/Login_heading"
        android:textAlignment="center"
        android:textColor="#3DADFF"
        android:textSize="36sp"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/tel_heading"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_below="@id/login_heading"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        android:text="@string/txt_username_register"
        android:textColor="#404040"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/tel_box"
        android:layout_width="370dp"
        android:layout_height="38dp"
        android:layout_below="@id/tel_heading"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:background="@drawable/round_corner_button"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/password_heading"
        android:layout_width="74dp"
        android:layout_height="22dp"
        android:layout_below="@+id/tel_box"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:text="@string/txt_password_register"
        android:textColor="#404040"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password_box"
        android:layout_width="369dp"
        android:layout_height="38dp"
        android:layout_below="@+id/password_heading"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:background="@drawable/round_corner_button"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="168dp"
        android:layout_height="20dp"
        android:layout_below="@+id/password_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="6dp"
        android:gravity="top"
        android:textColor="#A0D7FF"
        android:textSize="16dp"
        android:text="@string/forgot_password"
         />

    <Button
        android:id="@+id/login_finish_button"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_below="@+id/forgot_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/btn_rectangle_blue"
        android:fontFamily="@font/roboto"
        android:text="@string/Login_button"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_finish_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="143dp"
        android:text="@string/or"
        android:textAlignment="center"
        android:textColor="#C4C4C4"
        android:textSize="16dp"
        android:textStyle="bold" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_below="@+id/or"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/btn_rectangle_white"/>



    <!-- You are the new one ? -->
    <TextView
        android:id="@+id/you_are_the"
        android:layout_width="156dp"
        android:layout_height="22dp"
        android:layout_below="@+id/sign_in_button"
        android:textColor="#C4C4C4"
        android:textSize="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="102dp"
        android:gravity="center_horizontal|top"
        android:text="@string/register_text" />

    <Button
        android:id="@+id/regis_button"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_below="@+id/you_are_the"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/btn_rectangle_white"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/register_login_button"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#414141"
        android:textSize="18sp" />

</RelativeLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>