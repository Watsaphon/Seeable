<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="45dp"
        >

<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fallDetection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FF6363"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="@string/fallDetection_header"
                android:textSize="36sp"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/imgFallDetection"
                android:layout_width="210dp"
                android:layout_height="210dp"
                app:srcCompat="@mipmap/icon_fall_detection_foreground"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fallDetection_info1"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fallDetection_info2"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>