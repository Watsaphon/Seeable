<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Caretaker.Setting.AccountSettingDeleteFragment"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorAccent"
            >

            <!-- Rectangle 27 -->
            <View
                android:id="@+id/rectangle_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/ic_rectangle_27" />

            <TextView
                android:id="@+id/header"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="169dp"
                android:fontFamily="@font/roboto"
                android:text="@string/header_AccountSettingDeleteCaretaker"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/back_button_foreground" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/sub_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/subheader_AccountSettingEditCaretaker"
                android:textColor="#404040"
                android:textSize="36dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:srcCompat="@mipmap/icon_caution_foreground" />

            <TextView
                android:id="@+id/warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="30dp"
                android:textSize="16dp"
                android:text="@string/info_AccountSettingEditCaretaker" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:background="@drawable/round_corner_button"
                android:ems="10"
                android:hint="@string/hint_DeleteAccountBlind"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <Button
                android:id="@+id/delete"
                style="@style/AccountBlind_Button"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_rectangle_red"
                android:text="@string/delete_AccountSettingEditCaretaker" />

        </LinearLayout>



    </LinearLayout>

</layout>