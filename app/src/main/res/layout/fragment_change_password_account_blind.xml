<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".blind.settingBlind.ChangePasswordAccountBlindFragment"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorAccent"
    >

    <!-- Rectangle 27 -->
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/ic_rectangle_27" />

    <TextView
        android:id="@+id/header"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="169dp"
        android:fontFamily="@font/roboto"
        android:text="@string/header_ChangePassword"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="25dp"
        android:background="@mipmap/back_button_foreground" />


</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/currentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_currentPassword"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="22dp"
        style="@style/ChangePassword_txt"
        />

    <EditText
        android:id="@+id/editCurrentPassword"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:ems="10"
        android:padding="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="22dp"
        android:inputType="textPersonName"
        android:background="@drawable/round_corner_button"
       />

    <TextView
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_newPassword"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="22dp"
        style="@style/ChangePassword_txt"
        />

    <EditText
        android:id="@+id/editNewPassword"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:background="@drawable/round_corner_button"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="22dp"
        />

    <Button
        android:id="@+id/saveChangePassword"
        style="@style/AccountBlind_Button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_rectangle_blue"
        android:text="@string/btn_editDisplayName" />


</LinearLayout>
</LinearLayout>
</layout>
