<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Caretaker.Setting.AccountSettingChangePasswordFragment"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorAccent"
            >

            <!-- Rectangle 27 -->
            <View
                android:id="@+id/rectangle_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/ic_rectangle_27" />

            <TextView
                android:id="@+id/header"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="169dp"
                android:fontFamily="@font/roboto"
                android:text="@string/header_AccountSettingChangePasswordCaretaker"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/back_button_foreground" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/oldPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="#404040"
                android:text="@string/edit_oldPassword_AccountSettingChangePasswordCaretaker" />
            <EditText
                android:id="@+id/editOldPassword"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/round_corner_button"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/newPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="#404040"
                android:text="@string/edit_newPassword_AccountSettingChangePasswordCaretaker" />
            <EditText
                android:id="@+id/editNewPassword"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/round_corner_button"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/confirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="#404040"
                android:text="@string/edit_confirm_AccountSettingChangePasswordCaretaker" />
            <EditText
                android:id="@+id/editConfirmPassword"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/round_corner_button"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_rectangle_blue"
                android:text="@string/save_AccountSettingEditCaretaker"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="15dp"
                />



        </LinearLayout>



    </LinearLayout>

</layout>