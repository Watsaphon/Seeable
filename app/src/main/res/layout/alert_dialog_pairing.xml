<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="303dp"
        android:layout_height="180dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="8dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_corner_alert_pairing"
            android:layout_centerInParent="true"
            >


            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#3DADFF"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/pairing_header"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!--    <TextView-->
            <!--        android:id="@+id/text_box"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:text="@string/pairing_text_box"-->
            <!--        android:gravity="center"-->
            <!--        />-->


            <TextView
                android:id="@+id/subHeader"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:text="@string/pairing_subHeader"
                android:gravity="center"
                android:textSize="14dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EFEFEF"
                android:gravity="center">

                <Button
                    android:id="@+id/dialogSummitBtn"
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:background="#EFEFEF"
                    android:fontFamily="@font/roboto"
                    android:text="@string/pairing_addnewBtn"
                    android:textColor="#3DADFF" />

                <Button
                    android:id="@+id/dialogLogoutBtn"
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:background="#EFEFEF"
                    android:fontFamily="@font/roboto"
                    android:text="@string/pairing_logoutBtn"
                    android:textColor="#3DADFF" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
